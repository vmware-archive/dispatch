[Unit]
Description=Dispatch server
Documentation=https://github.com/vmware/dispatch
After=dispatch-appliance-ready.target docker
Requires=dispatch-appliance-ready.target docker

[Service]
Type=simple

Restart=on-failure
RestartSec=10

WorkingDirectory=/var/lib/dispatch
ExecStart=/usr/bin/dispatch-server local --host 0.0.0.0 --enable-tls --tls-certificate /storage/data/certs/server.crt --tls-certificate-key /storage/data/certs/server.key

[Install]
WantedBy=dispatch-appliance.target
